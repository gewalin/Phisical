                <RadioButton
                    android:textSize="18dp"
                    android:text="1 = ต้องการคนช่วยเหลือ"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:textSize="18dp"
                    android:text="2 = ขึ้นลงได้เอง (ถ้าต้องให้เครื่องช่วยเดิน เช่น cane จะต้องเอาขึ้นลงได้)"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RadioGroup>

            !--Group8-->
            <TextView
                android:background="#faf08f"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8.Dressing (การสวมใส่เสื้อผ้า)"
                android:textSize="20dp" />
            <!--Group8-->
            <RadioGroup
                android:background="#faf08f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:textSize="18dp"
                    android:text="0 = ต้องมีการสวมใส่ให้ ช่วยเหลือตัวเองไม่ได้เลยหรือได้น้อย"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:textSize="18dp"
                    android:text="1 = ช่วยตัวเองได้ราวร้อยละ 50 ที่เหลือต้องมีคนช่วย"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:textSize="18dp"
                    android:text="2 = ช่วยตัวเองได้ดี (รวมทั้งการติดกระดุม รูดซิบ หรือใส่เสื้อผ้าที่ดัดแปลงให้เหมาสมก็ได้)"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RadioGroup>

            !--Group9-->
            <TextView
                android:background="#cfd6ed"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9.Bowels (การกลั้นอุจระ)"
                android:textSize="20dp" />
            <!--Group9-->
            <RadioGroup
                android:background="#cfd6ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:textSize="18dp"
                    android:text="0 = กลั้นไม่ได้ หรือต้องการสวนอุจระอยู่เสมอ"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:textSize="18dp"
                    android:text="1 = กลั้นไม่ได้เป็นบางครั้ง (เป็นน้อยกว่า 1 สัปดาห์)"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:textSize="18dp"
                    android:text="2 = กลั้นได้ปกติ)"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RadioGroup>

            !--Group10-->
            <TextView
                android:background="#faf08f"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10.Bladder (การกลั้นปัจสาวะ)"
                android:textSize="20dp" />
            <!--Group10-->
            <RadioGroup
                android:background="#faf08f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:textSize="18dp"
                    android:text="0 = กลั้นไม่ได้ หรือใส่สายสวนปัจสาวะแต่ไม่สามารถดูแลเองได้"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:textSize="18dp"
                    android:text="1 = กลั้นไม่ได้เป็นบางครั้ง (เป็นน้อยกว่า 1 สัปดาห์)"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:textSize="18dp"
                    android:text="2 = กลั้นได้ปกติ)"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RadioGroup>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="รวมคะแนน : "
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="text"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Button
                android:text="บันทึก"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

