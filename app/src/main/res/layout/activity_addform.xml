                android:textSize="20dp" />
            <!--Group1-->
            <RadioGroup
                android:background="#cfd6ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:textSize="18dp"
                    android:text="0 = ไม่สามารถตักอาหารเข้าปากได้ ต้องมีคนป้อนให้"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:textSize="18dp"
                    android:text="1 = ช่วยใช้ช้อนตักเตรียมไว้ให้หรือตักเป็นชิ้นเล็กๆไว้ล่วงหน้า"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:textSize="18dp"
                    android:text="2 = ตักอาหารและช่วยตัวเองได้ปกติ"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RadioGroup>

            <!--Group2-->
            <TextView
                android:background="#faf08f"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.Transfer (ลุกนั่งจากที่นอนหรือจากเตียงไปยังเก้าอี้)"
