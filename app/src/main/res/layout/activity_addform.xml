            <RadioGroup
                android:background="#faf08f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:textSize="18dp"
                    android:text="0 = เคลื่อที่ไปไหนไม่ได้"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:textSize="18dp"
                    android:text="1 = ต้องใช้รถเข็นช่วยตัวเองให้เคลื่อนที่ได้ (ไม่ต้องมีคนเข็นให้) และเข้ามุมประตูได้"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:textSize="18dp"
                    android:text="2 = เดินหรือเคลื่อนที่โดยมีคนช่วยพยุง หรือบอกให้ทำตามหรือต้องให้ความสนใจดูแลเพื่อความปลอดภัย"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <RadioButton
                    android:textSize="18dp"
                    android:text="3 = เดินหรือเคลื่อนที่ได้เอง"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RadioGroup>

            !--Group7-->
            <TextView
                android:background="#cfd6ed"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7.Stairs (การขึ้นลงบันได 1 ขั้น)"
                android:textSize="20dp" />
            <!--Group7-->
            <RadioGroup
                android:background="#cfd6ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:textSize="18dp"
                    android:text="0 = ไมาสามารถทำได้"
